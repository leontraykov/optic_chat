<div class="container mt-4">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-md-8">
        <div class="card text-center rounded-4 bg-dark border-light text-light mt-4 mb-4">
          <div class="card-body">
            <p class="fs-3">This is ChatChat! Chatting is allowed!</p>
            <p class="fs-4 text-decoration-underline">Welcome<%= @user.nil? ? "" : ", #{@user.name}" %>!</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="participants">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="mb-4">Participants:</h1>
    </div>

    <%= turbo_stream_from "users" %>
    <div class="list-group" id="users">
      <%= render @users %>
    </div>
  </div>

  <hr>

  <div class="d-flex justify-content-between align-items-center">
    <h1 class="mb-4">Chat Rooms:</h1>
    <%= link_to "Create New Room", new_chat_room_path, class: "btn btn-outline-info rounded-4 align-self-baseline" %>
  </div>

  <%= turbo_stream_from "chat_rooms" %>
  <div class="list-group" id="chat_rooms">
    <%= render @chat_rooms %>
  </div>
</div>
