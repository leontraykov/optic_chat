<div class="container mt-4 width-50 border border-light px-4 py-4 rounded-4">
  <h2>Registration</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, "Name", class:"form-label fw-bold" %><br />
      <%= f.text_field :name, class:"form-control mb-2", autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :email, class:"form-label fw-bold" %><br />
      <%= f.email_field :email, class:"form-control mb-2 ", autofocus: true, autocomplete: "email" %>
      <div id="emailHelp" class="form-text text-light mb-2">We never share your data with third parties.</div>
    </div>

    <div class="field">
      <%= f.label :password, "Password",class:"form-label fw-bold" %>
      <%= f.password_field :password, class:"form-control mb-2", autocomplete: "new-password" %>
      <% if @minimum_password_length %>
      <div class="form-text text-light mb-2">Minimum (<%= @minimum_password_length %> characters)</div>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm Password", class:"form-label fw-bold" %><br />
      <%= f.password_field :password_confirmation, class:"form-control mb-2", autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Register", class:" my-4 btn btn-outline-warning fw-bold" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
